<h2>Transfer money to another user or bank account</h2>

<%= form_with model: @transaction do |f| %>
    <%= f.label :bank_account_uuid, "Recipient Bank Account UUID" %>
    <%= f.text_field :bank_account_uuid %>
    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount, step: 0.01, min: 0.01 %>
    <%= f.submit "Transfer money" %>
<% end %>
